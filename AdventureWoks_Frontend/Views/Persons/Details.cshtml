@model AdventureWoks_Frontend.Models.Person

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.BusinessEntityId == 0)
{
    <div class="alert alert-warning" role="alert">Staff Not Found</div>
    <a asp-action="Index">Back to List</a>
}
else
{
    <div class="container" style="margin-top:30px">
        <div class="card shadow-sm" style="max-width: auto; margin: 0 auto;">
            <div class="row g-0">
                <div class="col-md-4 p-3 text-center">
                    @{
                        string gender = Model.Gender?.Trim() == "M" ? "men" : "women";
                        string imagePath = $"https://randomuser.me/api/portraits/{gender}/{Model.BusinessEntityId % 99}.jpg";
                    }
                    <img src="@imagePath" class="rounded-circle img-thumbnail" alt="Profile Picture">
                    <div class="mt-2">
                        <span class="badge bg-success">Online</span>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title d-flex justify-content-between align-items-center">
                            @Html.DisplayFor(Model => Model.FirstName) @Html.DisplayFor(Model => Model.MiddleName) @Html.DisplayFor(Model => Model.LastName)
                            <button class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i> @Html.ActionLink("Edit", "Edit", new { id = Model.BusinessEntityId })
                            </button>
                        </h5>
                        <p class="card-text text-muted">
                            <i class="fas fa-briefcase"></i> Senior Developer
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                @foreach (var item in Model.PhoneNumbers?.PhoneNumber)
                                {
                                    <i class="fas fa-map-marker-alt"></i>
                                    @item
                                }
                            </small>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                @foreach (var item in Model.EmailAddresses?.EmailAddress)
                                {
                                    <i class="fas fa-map-marker-alt"></i>
                                    @item
                                }
                            </small>
                        </p>
                        <div class="border-top pt-2">
                            <div class="row text-center">
                                <div class="col">
                                    <h6>Type</h6>
                                    <strong>@Model.PersonType</strong>
                                </div>
                                <div class="col border-start">
                                    <h6>Email Promotion</h6>
                                    <strong>@Model.EmailPromotion</strong>
                                </div>
                                <div class="col border-start">
                                    <h6>Modified On</h6>
                                    <strong>@Model.ModifiedDate</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-white">
                <div class="d-flex justify-content-around">
                    <button class="btn btn-link text-decoration-none">
                        <i class="fas fa-user-plus"></i>         <a asp-action="Index">Back to List</a>
                    </button>
                    <button class="btn btn-link text-decoration-none">
                        <i class="fas fa-envelope"></i> Message
                    </button>
                    <button class="btn btn-link text-decoration-none">
                        <i class="fas fa-share"></i> Share
                    </button>
                </div>
            </div>
        </div>
    </div>
}