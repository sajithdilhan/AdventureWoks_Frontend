@{
	ViewData["Title"] = "Home";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero-section py-5">
	<div class="container">
		<div class="row align-items-center">
			<!-- Left text section -->
			<div class="col-md-6 text-start">
				<h1 class="fw-bold mb-3 display-5">
					Transform Your <span class="text-primary">Digital Future</span>
				</h1>
				<p class="text-muted mb-4 fs-5">
					Discover insights and data from the AdventureWorks database with modern .NET microservices.
				</p>
				<div class="d-flex align-items-center gap-3">
					<a href="/Person" class="btn btn-primary btn-lg px-4 rounded-pill shadow-sm">Start Journey</a>
					<a href="#" class="btn btn-outline-secondary btn-lg rounded-pill d-flex align-items-center">
						<i class="bi bi-play-circle-fill fs-4 me-2"></i> Watch Demo
					</a>
				</div>
			</div>

			<!-- Right image section -->
			<div class="col-md-6 text-center mt-5 mt-md-0">
				<img src="~/images/right-image.jpg" alt="AdventureWorks Dashboard" class="img-fluid w-100" />
			</div>
		</div>

		<!-- Client logos -->
		<div class="row text-center mt-5 pt-4 border-top">
			<div class="col-6 col-md-2 offset-md-1 mb-3 mb-md-0">
				<img src="~/images/logos/cybersource-logo-500x281.png" class="img-fluid" />
			</div>
			<div class="col-6 col-md-2 mb-3 mb-md-0">
				<img src="~/images/logos/jollibee-logo-500x281.png" class="img-fluid" />
			</div>
			<div class="col-6 col-md-2 mb-3 mb-md-0">
				<img src="~/images/logos/paddle-logo-1-500x281.png" class="img-fluid" />
			</div>
			<div class="col-6 col-md-2 mb-3 mb-md-0">
				<img src="~/images/logos/portillos-logo-500x281.png" class="img-fluid" />
			</div>
			<div class="col-6 col-md-2 mb-3 mb-md-0">
				<img src="~/images/logos/razorpay-logo-1-500x281.png" class="img-fluid" />
			</div>
		</div>
	</div>
</section>

<style>
	.hero-section {
		background: linear-gradient(135deg, #f8fbff 0%, #ffffff 100%);
		min-height: 85vh;
		display: flex;
		align-items: center;
	}

	h1 span {
		background: linear-gradient(90deg, #007bff, #0dcaf0);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.btn-outline-secondary {
		color: #6c757d;
		border-color: #dee2e6;
	}

		.btn-outline-secondary:hover {
			background-color: #f8f9fa;
		}
</style>
